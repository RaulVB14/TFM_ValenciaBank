# =============================================================================
# EXAMPLE APPLICATION PROPERTIES - COPY AND CONFIGURE WITH YOUR OWN VALUES
# =============================================================================
# IMPORTANTE: Renombra este archivo a 'application.properties' y configura
# con tus propias credenciales. NUNCA commitees el archivo sin .example
# =============================================================================

# Application Configuration
spring.application.name=valenciaBank

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# IMPORTANTE: Usa credenciales seguras en producción
spring.datasource.url=jdbc:mariadb://localhost:3306/valenciabank
spring.datasource.username=root
spring.datasource.password=YOUR_SECURE_PASSWORD_HERE

# Hibernate Configuration
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false

# =============================================================================
# API & EXTERNAL SERVICES
# =============================================================================
# IMPORTANTE: No expongas keys reales en este archivo

# Alpha Vantage — Datos históricos de criptomonedas y acciones
# Obtén tu key en: https://www.alphavantage.co/support/#api-key
api.key=YOUR_ALPHA_VANTAGE_API_KEY_HERE

# Finnhub — Cotizaciones de ETFs y fondos indexados (60 req/min free)
# Obtén tu key en: https://finnhub.io/register
finnhub.api.key=YOUR_FINNHUB_API_KEY_HERE

# Groq AI — Análisis de mercado con Llama 3.3 70B (30 req/min free)
# Obtén tu key en: https://console.groq.com/keys
groq.api.key=YOUR_GROQ_API_KEY_HERE

# =============================================================================
# SECURITY
# =============================================================================
# IMPORTANTE: Genera una clave segura para JWT (minimo 256 caracteres)
# Usa: openssl rand -base64 32
jwt.key=YOUR_SECRET_JWT_KEY_HERE

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
server.port=8080
server.servlet.context-path=/

# =============================================================================
# LOGGING
# =============================================================================
logging.level.root=INFO
logging.level.com.valenciaBank=DEBUG
