# =============================================================================
# BACKEND ENVIRONMENT
# =============================================================================

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=valenciabank
DB_USER=root
DB_PASSWORD=YOUR_SECURE_PASSWORD_HERE

# API Configuration
API_KEY=YOUR_API_KEY_HERE

# Security - JWT Secret (genera uno seguro con: openssl rand -base64 32)
JWT_KEY=YOUR_SECRET_JWT_KEY_HERE

# Server Port
PORT=8080

# =============================================================================
# FRONTEND ENVIRONMENT
# =============================================================================

# Backend API URL
VITE_API_URL=http://localhost:8080

# Environment
VITE_ENV=development
